<odoo>

    <!-- Acción -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menú principal -->
    <menuitem id="menu_estate_root" name="Estate"/>

    <!-- Submenú -->
    <menuitem id="menu_estate_property" name="Properties" parent="menu_estate_root" action="action_estate_property"/>

    <!-- Vista list -->
    <record id="view_estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="expected_price"/>
                <field name="state"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="date_availability"/>
            </list>
        </field>
    </record>

    <!-- Vista form mejorada -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button name="action_sold" string="Sold" type="object" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Property name..."/>
                        </h1>
                    </div>
                    <group>
                        <group string="Basic Information">
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                        <group string="Property Details">
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="total_area"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Describe the property..."/>
                        </page>
                        <page string="Garden">
                            <group>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                            </group>
                        </page>
                        <page string="Tags">
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </page>
                    </notebook>
                    <group>
                        <group string="Salesperson">
                            <field name="salesperson_id"/>
                        </group>
                        <group string="Buyer">
                            <field name="buyer_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
